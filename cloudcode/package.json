{
  "name": "cloudcode",
  "displayName": "CloudCode",
  "description": "a copy of claudecode with additional features",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cloudcode.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "cloudcode.analyzeProject",
        "title": "CloudCode: Analyze Current Project"
      },
      {
        "command": "cloudcode.modernizeCode",
        "title": "CloudCode: Modernize Selection"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorHasSelection",
          "command": "cloudcode.modernizeCode",
          "group": "1_modification"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "cloudcode-sidebar",
          "title": "CloudCode",
          "icon": "images/cloudcode-icon.svg"
        }
      ]
    },
    "views": {
      "cloudcode-sidebar": [
        {
          "id": "cloudcode.projectsView",
          "name": "Project Analysis",
          "contextualTitle": "CloudCode"
        },
        {
          "id": "cloudcode.refactorActionsView",
          "name": "Refactor Actions",
          "contextualTitle": "CloudCode"
        },
        {
          "id": "cloudcode.explainView",
          "type": "webview",
          "name": "Explain Code"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/node-fetch": "^2.6.13",
    "@types/vscode": "^1.105.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/webview-ui-toolkit": "^1.4.0",
    "eslint": "^9.36.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "node-fetch": "^2.7.0"
  }
}
